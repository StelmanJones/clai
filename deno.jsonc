{
  "$schema": "https://deno.land/x/deno@v1.36.4/cli/schemas/config-file.v1.json",
  "tasks": {
    "query": "deno run --allow-env --allow-run=/bin/sh,glow   --allow-net --allow-read --allow-write --unstable ./src/main.ts",
    "installer": "deno fmt && deno install -f  --allow-env --allow-run=/bin/sh,glow --allow-net --allow-read --allow-write --unstable ./src/main.ts --name clai",
    "benchmark": "deno bench --allow-env --allow-net --allow-read --allow-write --unstable ./src/*.bench.ts"
  },
  "fmt": {
    "lineWidth": 80,
    "indentWidth": 2,
    "useTabs": false,
    "semiColons": true,
    "singleQuote": false
  },
  "bench": {
    "include": [
      "./src/*.test.ts"
    ]
  }
}
